<div id="payroll_title" class="d-flex gap-2 align-items-center">
  <h3 class="me-auto"><%= @payroll.for.humanize %> Payroll for the month of <%= @payroll.month.capitalize %> - Batch <%= @payroll.batch %></h3>
  <%= render partial: "payrolls/payroll_actions", locals: { payroll: @payroll }%>
</div>
<br>
<% if @payroll.part_time? %>
  <%= render partial: "payrolls/show_templates/part_time", locals: { payroll: @payroll } %>
<% elsif @payroll.cos? %>
  <%= render partial: "payrolls/show_templates/cos", locals: { payroll: @payroll } %>
<% elsif @payroll.regular? %>
  <%= render partial: "payrolls/show_templates/regular", locals: { payroll: @payroll } %>
<% end %>